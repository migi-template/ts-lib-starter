{
  "compilerOptions": {
    "declaration": true, // 生成 .d.ts
    "target": "ES5", // 生成ES5代码
    "module": "esnext", // 指定生成代码的模板标准
    "moduleResolution": "node", // 如何处理模块
    "experimentalDecorators": true, // 开启装饰器语法
    "importHelpers": true, // 防止同一 helper 函数出现在不同的文件中
    "strict": true,
  }
}
